<h1>My tasks</h1>

<h2><%= link_to 'Create a new task', neww_path %></h2>

<% @tasks.each do |task| %>
<h2><%= link_to task.title, task_path(task) %></h2>
<p><%= task.details %></p>
<p><%= task.completed %></p>
<%= link_to "Delete", tasks_path(@restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>


